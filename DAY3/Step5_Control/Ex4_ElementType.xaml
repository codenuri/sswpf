<Window x:Class="Step5_Control.Ex4_ElementType"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Step5_Control"
        mc:Ignorable="d"
        Title="Ex4_ElementType" Height="450" Width="800">
    
    <StackPanel>

        <!-- C# 코드가 아닌 XAML 로 요소를 넣어 보세요(AAA, BBB)-->
        <ListBox x:Name="listbox" Width="200">

            <ListBox.Items>
                <Label Content="AAA"/>
                <Label Content="BBB"/>

                <StackPanel Orientation="Horizontal">
                    
                    <Rectangle Fill="Red" Width="30"/>
                    <Label Content="CCC"/>
                    
                </StackPanel>
                
                
            </ListBox.Items>
            
        </ListBox>
        
        
    </StackPanel>
    
</Window>
