<Window x:Class="Step5_Control.Ex3_ItemControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Step5_Control"
        mc:Ignorable="d"
        Title="Ex3_ItemControl" Height="450" Width="800">
    
    <StackPanel Orientation="Horizontal" Margin="5">

        <TextBox x:Name="txtbox" Width="200"/>
        
        <Button Content="확인1" Click="Button1_Click" Width="100"/>

        <ListBox x:Name="listbox" Width="100" />

        <Button Content="확인2" Click="Button2_Click" Width="100"/>

        <ComboBox x:Name="combobox" Width="100" />


    </StackPanel>
</Window>
