<Window x:Class="Step2_EVENT.Ex2_RoutedEvent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Step2_EVENT"
        mc:Ignorable="d"
        Title="Ex2_RoutedEvent" Height="450" Width="800"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        PreviewMouseLeftButtonDown="Window_PreviewMouseLeftButtonDown">

    <!-- Background="Yellow">   : 이벤트 전달됨-->
    <!-- Background="{x:Null}"> : 이벤트 전달 안됨-->
    <!-- Background="Transparent"> : 이벤트 전달됨-->
    <StackPanel MouseLeftButtonDown="StackPanel_MouseLeftButtonDown"                
                Background="Transparent"
                PreviewMouseLeftButtonDown="StackPanel_PreviewMouseLeftButtonDown">


        <Label Content="Hello" Width="200" Height="200" 
               MouseLeftButtonDown="Label_MouseLeftButtonDown"
               PreviewMouseLeftButtonDown="Label_PreviewMouseLeftButtonDown"/>

        <Image Source="images/totoro.jpg" />

    </StackPanel>

</Window>
