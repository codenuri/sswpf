<Window x:Class="Step4_Layout.Ex2_Grid1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Step4_Layout"
        mc:Ignorable="d"
        Title="Ex2_Grid1" Height="450" Width="800">
    <!-- 복습시 Grid 의 ZAML 코드와 1일차 C# 코드로 만들었던것을 비교해 보세요 -->
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="70*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="80*"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Row="0" Grid.Column="0" Grid.ColumnSpan ="2" Content="확인1" />
        <Button Grid.Row="2" Grid.Column="1" Content="확인2" />

    </Grid>
</Window>  
