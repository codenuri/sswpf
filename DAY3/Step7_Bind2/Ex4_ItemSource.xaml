<Window x:Class="Step7_Bind2.Ex4_ItemSource"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Step7_Bind2"
        mc:Ignorable="d"
        Title="Ex4_ItemSource" Height="450" Width="800">
    <Canvas>

        <ListBox x:Name="listbox" Canvas.Left="10" Canvas.Top="10" 
                  Width="100" Height="200"
                 DisplayMemberPath="Name"/>

        <Button Content="변경" x:Name="button1" Click="button1_Click"
                Canvas.Left="150" Canvas.Top="10" />
        
        <Button Content="추가" x:Name="button2" Click="button2_Click"
                Canvas.Left="150" Canvas.Top="50"/>
        

    </Canvas>    
    
</Window>
